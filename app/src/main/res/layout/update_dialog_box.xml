<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/displayBackground">
    <EditText
        android:id="@+id/etDrugName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Drug Name"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/etDrugDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Drug Description"
        android:inputType="textPersonName"
        android:ems="10"/>
    <EditText
        android:id="@+id/etDrugSideEffect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Side Effect"
        android:inputType="textPersonName"
        android:ems="10"/>

    <EditText
        android:id="@+id/etDrugPrevention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Prevention"
        android:inputType="textPersonName"
        android:ems="10"/>
    <EditText
        android:id="@+id/etDrugTreatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Treatment"
        android:inputType="textPersonName"
        android:ems="10"/>

    <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="108dp"
        android:layout_height="60dp"
        android:text="Update Data"
        android:textSize="10sp"
        android:textStyle="bold"
        android:background="@null"
        android:backgroundTint="@color/button"
        android:layout_gravity="center"/>

</LinearLayout>